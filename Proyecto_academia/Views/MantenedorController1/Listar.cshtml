@using Microsoft.AspNetCore.Http

@model List<Usuario>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="card">
    <div class="card-header">
        Lista De Contactos
    </div>

    <h2>User @Context.Request.HttpContext.Session.GetString("user")</h2>
    <h2>Rol: @Context.Request.HttpContext.Session.GetString("rol")</h2>

    <div class="card-body">
        <a asp-action="Guardar" asp-controller="MantenedorController1" class="btn btn-success">Crear Nuevo</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <th>IdUsuario</th>
                <th>Correo</th>
                <th>Nombre</th>
                <th>Contra</th>
                <th>Fecha_Creacion</th>
            </thead>
            <tbody>
                @foreach (var Item in Model)
                {
                    <tr>
                        <td>@Item.IdUsuario</td>
                        <td>@Item.Nombre_User</td>
                        <td>@Item.Correo</td>
                        <td>****</td>
                        <td>@Item.FechaCreacion</td>
                        <td>
                            <a asp-action="Editar" asp-controller="MantenedorController1" class="btn btn-primary btn-sm" asp-route-IdUsuario="@Item.IdUsuario">Editar</a>
                            <a asp-action="Eliminar" asp-controller="MantenedorController1" class="btn btn-secondary btn-sm" asp-route-IdUsuario="@Item.IdUsuario">Eliminar</a>
                        </td>
                    </tr>
                    

                }
            </tbody>
        </table>
    </div>
</div>

